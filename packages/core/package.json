{
  "name": "@multiclaude/core",
  "version": "0.1.0",
  "description": "Core library for multiclaude daemon communication",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
